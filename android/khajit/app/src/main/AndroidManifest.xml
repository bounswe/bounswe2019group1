<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.khajit_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <service
            android:name=".service.FetchAddressIntentService"
            android:exported="false"></service>

        <activity android:name=".activity.EditingProfilePageActivity" />
        <activity
            android:name=".activity.HomeFeedPageActivity"
            android:label="@string/title_activity_home_feed_page" />
        <activity android:name=".activity.SignUpPageTraderActivity" />
        <activity
            android:name=".activity.MainPageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginPageActivity" />
        <activity android:name=".activity.SignUpPageActivity" />
        <activity android:name=".activity.ProfilePageActivity" />
    </application>

</manifest>